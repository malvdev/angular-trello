{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strictPropertyInitialization": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@trello/libs/profile/domain": ["libs/profile/domain/src/index.ts"],
      "@trello/libs/auth/domain": ["libs/auth/domain/src/index.ts"],
      "@trello/libs/auth/feature-forgot": [
        "libs/auth/feature-forgot/src/index.ts"
      ],
      "@trello/libs/auth/feature-login": [
        "libs/auth/feature-login/src/index.ts"
      ],
      "@trello/libs/auth/feature-register": [
        "libs/auth/feature-register/src/index.ts"
      ],
      "@trello/libs/auth/ui": ["libs/auth/ui/src/index.ts"],
      "@trello/libs/config": ["libs/config/src/index.ts"],
      "@trello/libs/shared/api": ["libs/shared/api/src/index.ts"],
      "@trello/libs/shared/dynamic-form": [
        "libs/shared/dynamic-form/src/index.ts"
      ],
      "@trello/libs/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@trello/libs/welcome/feature-home": [
        "libs/welcome/feature-home/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
